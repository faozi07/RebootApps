<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ui.FragBucketList">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myPict"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/me"/>
            <TextView
                android:id="@+id/text_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Hi, Ilham!\nHere’s your today’s bucket list"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:textSize="20dp" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:background="?attr/selectableItemBackground"
                android:foreground="?attr/selectableItemBackground"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@android:color/white">

                <ImageView
                    android:id="@+id/image_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/card_calm_music"
                    android:scaleType="fitXY"/>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="16dp"
                    android:background="#fff">

                    <TextView
                        android:id="@+id/title_card_slide"
                        android:text="Listen to calm music for a relaxing morning"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="22sp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/title"
                android:text="Simple things you can do today"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="16dp"/>

            <HorizontalScrollView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="80dp">
                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="20dp"
                        android:id="@+id/card_call_supporter"
                        android:layout_width="320dp"
                        android:layout_height="70dp"
                        app:cardCornerRadius="12dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/rounded_red">
                                <ImageView
                                    android:id="@+id/cooking"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/phone"/>
                            </RelativeLayout>
                            <TextView
                                android:text="Call my supporter"
                                android:layout_marginLeft="8dp"
                                android:layout_gravity="center"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:textColor="@color/text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="20dp"
                        android:id="@+id/card_bake_cinnamon_bread"
                        android:layout_width="350dp"
                        android:layout_height="70dp"
                        app:cardCornerRadius="12dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/rounded_blue">
                                <ImageView
                                    android:id="@+id/cinnamon"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/videos"/>
                            </RelativeLayout>
                            <TextView
                                android:text="Watch some videos"
                                android:paddingTop="20dp"
                                android:layout_marginLeft="8dp"
                                android:layout_gravity="center"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:textColor="@color/text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="20dp"
                        android:id="@+id/card_watch_videos"
                        android:layout_width="350dp"
                        android:layout_height="70dp"
                        app:cardCornerRadius="12dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/rounded_green">
                                <ImageView
                                    android:id="@+id/bake"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/bake"/>
                            </RelativeLayout>
                            <TextView
                                android:text="Bake cinnamons bread"
                                android:paddingTop="20dp"
                                android:layout_marginLeft="8dp"
                                android:layout_gravity="center"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:textColor="@color/text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>